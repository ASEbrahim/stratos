[Unit]
Description=StratOS Strategic Intelligence Dashboard
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
User=ahmad
WorkingDirectory=/home/ahmad/Downloads/StratOS/StratOS1/backend
ExecStart=/usr/bin/python3 main.py --serve --background
Restart=on-failure
RestartSec=5

# Environment
Environment=PYTHONUNBUFFERED=1

# Logging to journal
StandardOutput=journal
StandardError=journal
SyslogIdentifier=stratos

[Install]
WantedBy=multi-user.target
